<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="83dp"
            android:onClick="mechanikEdytuj"
            android:text="Zapisz Zmiany"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="301dp" />

        <EditText
            android:id="@+id/hasloMech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nazwaMech"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="hasÅ‚o"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="62dp" />

        <EditText
            android:id="@+id/emailMech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/adresMech"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="adres email"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="108dp" />

        <EditText
            android:id="@+id/adresMech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/godzMech"
            android:layout_alignLeft="@+id/godzMech"
            android:layout_alignStart="@+id/godzMech"
            android:ems="10"
            android:hint="adres"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="200dp" />

        <EditText
            android:id="@+id/godzMech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nazwaMech"
            android:layout_alignLeft="@+id/nazwaMech"
            android:layout_alignStart="@+id/nazwaMech"
            android:ems="10"
            android:hint="Godziny pracy"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="246dp" />

        <EditText
            android:id="@+id/nazwaMech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Nr telefonu"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="154dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>